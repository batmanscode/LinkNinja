micros:
    - name: LinkNinja
      src: ./LinkNinja
      engine: python3.9
      primary: true
      run: uvicorn main:app --host 0.0.0.0 --port 8080
      public_routes:
      - '/*'
      presets:
        env:
          - name: BOT_TOKEN
            description: Telegram bot token
          - name: DOMAIN
            description: The domain generated by your micro
          - name: WEBHOOK_PASSWORD
            description: This can be anything. Think of it as a password.
          - name: YOUR_USER_ID
            description: Your telegram user ID
          - name: PROJECT_KEY
            description: Deta project key to connect to Base
